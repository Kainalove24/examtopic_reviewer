rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Vouchers collection - read access for authenticated users, no direct writes
    match /vouchers/{voucherId} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through admin functions
    }
    
    // Redeemed vouchers collection - users can read and create their own redemptions
    match /redeemed_vouchers/{redemptionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // No updates or deletes allowed
    }
    
    // Exams collection - read access for authenticated users, no direct writes
    match /exams/{examId} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through admin functions
    }
    
    // Admin collection - no access for now (future custom admin auth)
    match /admin/{document=**} {
      allow read, write: if false;
    }
  }
} 